<div class="new-book-container form-style-5">
  <h1>Create a new book</h1>

  <form
    class="form-container"
    action="/books/new-book"
    method="POST"
    enctype="multipart/form-data"
  >

    <label for="title"></label>
    <input type="text" name="title" placeholder="Title" required />

    <label for="authors"></label>
    <input type="text" name="authors" placeholder="Authors" required />

    <label for="publishedDate"></label>
    <input
      type="text"
      name="publishedDate"
      placeholder="Publication Year (eg. 1984)"
      required
    />

    <label for="description"></label>
    <input type="text" name="description" placeholder="Description" required />

    <label for="pageCount"></label>
    <input
      type="number"
      min="0"
      name="pageCount"
      placeholder="Page Count"
      required
    />

    <label for="categories"></label>
    <select name="categories" id="categories" required>
      <option disable selected value="">Select book genre:</option>
      <option value="Adventure">Adventure</option>
      <option value="Art">Art</option>
      <option value="Biography">Biography</option>
      <option value="children">Children</option>
      <option value="Crime">Crime</option>
      <option value="Detective">Detective</option>
      <option value="Drama">Drama</option>
      <option value="Fiction">Fiction</option>
      <option value="History">History</option>
      <option value="Horror">Horror</option>
      <option value="Literature">Literature</option>
      <option value="Mystery">Mystery</option>
      <option value="Poetry">Poetry</option>
      <option value="Romance">Romance</option>
      <option value="Spirality">Spirality</option>
      <option value="Stories">Stories</option>
      <option value="Thriller">Thriller</option>
      <option value="Travel">Travel</option>
    </select>

    <label class="myLabel" for="bookPictureUrl">
      <input
        type="file"
        name="bookPictureUrl"
        id="bookPictureUrl"
        placeholder="Add book cover"
        required
      />
      <span>
        Upload Book Cover
      </span>
    </label>

    <button class="submit-btn" type="submit">Add Book</button>

  </form>
</div>

