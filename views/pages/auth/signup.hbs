<form action="/auth/signup" method="POST" enctype="multipart/form-data">
  <label for="username">Username: </label>
  <input type="text" name="username" minlength="3" maxlength="10" required />

  <label for="email">Email:</label>
  <input type="email" name="email" id="email" required />

  <label for="password">Password:</label>
  <input type="password" name="password" id="password" required />

  <label for="avatarUrl">Profile Picture:</label>
  <input type="file" name="avatarUrl" id="avatarUrl" />

  <button type="submit">Submit</button>
</form>

{{#if errorMessage}}
  <p>{{errorMessage}}</p>
{{/if}}