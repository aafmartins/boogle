<h2>Edit Book</h2>

<form action="/books/{{book._id}}/edit" method="POST">

  <label for="title">Title</label>
  <input type="text" name="title" value="{{book.title}}" />
  <br />
  <label for="authors">Author</label>
  <input type="text" name="authors" value="{{book.authors}}" />
  <br />
  <label for="publishedDate">Published date</label>
  <input type="date" name="publishedDate" value="{{book.publishedDate}}" />
  <br />
  <label for="description">Description</label>
  <input type="text" name="description" value="{{book.description}}" />
  <br />

  <label for="pageCount">Page count</label>
  <input type="number" name="pageCount" value="{{book.pageCount}}" />
  <br />
  <label for="categories">Genre</label>
  <input type="text" name="categories" value="{{book.categories}}" />
  <br />
  <label for="maturityRating">Maturity Rating</label>
  <input type="text" name="maturityRating" value="{{book.maturityRating}}" />
  <br />
  <button type="submit">Save</button>

</form>