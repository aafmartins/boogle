<!---eader-->
<header class="container">
  <div class="Hero row">

    <div class="hero-left-part col-md-auto">
      <h1 class="H1-hero">Browse books & create your own personal library</h1>
      <a href="/auth/signup">
        <button class="Hero-button">Create your Account</button>
      </a>
    </div>

    <div class="col-md-auto">
      <img class="Hero-image" src="images/Hero-Image.png" alt="Hero-Image" />
    </div>

  </div>
</header>

<!---earch bar-->
<div class=".container-fluid formInputsContainer">
  <form class="row" action="/search/book-search" method="GET">
    {{!-- <div class=" row "> --}}
      <div class=" col-sm">
        <label for="author">Search by Author:</label>
        <input type="text" name="author" placeholder="&#x1F50D Author" id="author" />
      </div>

      <div class=" col-sm">
        <label for="title">Search by Title: </label>
        <input type="text" name="title" placeholder="&#x1F50D Book title" id="title" />
      </div>

      <div class=" col-sm">
        <label for="generic">Search by Keyword:</label>
        <input type="text" name="generic" placeholder="&#x1F50D Keyword" id="generic" />
      </div>

      <div class=" col-sm">
        <label for="genre">Pick by Genre:</label>
        <select name="genre" id="genre">
          <option disable selected value="">&#x1F50D Select a genre from the list</option>
          <option value="adventure">Adventure</option>
          <option value="art">Art</option>
          <option value="bio">Biography</option>
          <option value="children">Children</option>
          <option value="crime">Crime</option>
          <option value="drama">Drama</option>
          <option value="fiction">Fiction</option>
          <option value="history">History</option>
          <option value="horror">Horror</option>
          <option value="liter">Literature</option>
          <option value="poetry">Poetry</option>
          <option value="romance">Romance</option>
          <option value="stor">Stories</option>
          <option value="thriller">Thriller</option>
          <option value="travel">Travel</option>
        </select>
      </div>

      <div class="col-sm">
        <button class="search-btn" type="submit">Search</button>
      </div>
        
    {{!-- </div> --}}
  </form>
</div>

<ul class="results-list-container">
{{#each latestBooks}}
    {{!-- {{#each books.data.items}} --}}
      {{#if this.description}}
        <div class="results-item-container">
          <li>
            <div class="container-heading">
              <div class="cover-img">
                <img src="{{this.bookPictureUrl}}" alt="" />
              </div>
              {{!-- <div class="details-link-container">
                <a href="/search/book-search?author=&title={{this.title}}&generic=&genre=">
                  <button class="details-link">Find more</button>
                </a>
              </div> --}}
            </div>

            <div class="title">
              <a href="/search/book-search?author=&title={{this.title}}&generic=&genre=">
              <h5 class="upper-case">{{this.title}}</h5>
              </a>
            </div>

            {{#each this.authors}}
              <span class="author">
                <span class="upper-case">{{this}}</span>
                <span class="ghost">_</span>
              </span>
            {{/each}}

            {{#if this.description}}
            {{!-- {{cleanDescription this.description}} --}}
              <div class="description">
                <p> {{cleanAndSliceDescription this.description}}</p>
              </div>
            {{/if}}

          </li>
        </div>
      {{/if}}
  {{/each}}
  </ul>
<!---newsletter-->
<div class="Signup-container">
  <div class="Signup">
    <img class="Signup-image" src="images/reading.png" alt="Sign-up Image" />
  </div>
  <div class="Signup-right-side">
    <h1 class="H1-Signup">Create your very own <br /> personal bookshelf</h1>
    <h5 class="H5-Signup">Join for free to save your favorite books!</h5>
    <a href="/auth/signup"><button class="Signup-button">Sign up</button></a>
  </div>
</div>