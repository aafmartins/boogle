<div class="edit-book-container form-style-5">
  <h1>Edit Book</h1>

  <form class="form-container" action="/books/{{book._id}}/edit" method="POST">

    <label for="title">Title</label>
    <input type="text" name="title" value="{{book.title}}" />

    <label for="authors">Author</label>
    <input type="text" name="authors" value="{{book.authors}}" />

    <label for="publishedDate">Published date</label>
    <input type="text" name="publishedDate" value="{{book.publishedDate}}" />

    <label for="description">Description</label>
    <input type="text" name="description" value="{{book.description}}" />

    <label for="pageCount">Page count</label>
    <input type="number" min="0" name="pageCount" value="{{book.pageCount}}" />

    <label for="categories">Select book genre:</label>
    <select name="categories" id="categories" required>
      <option
        disable
        selected
        value="{{book.categories}}"
      >{{book.categories}}</option>
      <option value="Adventure">Adventure</option>
      <option value="Art">Art</option>
      <option value="Architecture">Architecture</option>
      <option value="Biography">Biography</option>
      <option value="Children">Children</option>
      <option value="Crime">Crime</option>
      <option value="Detective">Detective</option>
      <option value="Drama">Drama</option>
      <option value="Fiction">Fiction</option>
      <option value="History">History</option>
      <option value="Horror">Horror</option>
      <option value="Literature">Literature</option>
      <option value="Mystery">Mystery</option>
      <option value="Poetry">Poetry</option>
      <option value="Romance">Romance</option>
      <option value="Spirituality">Spirituality</option>
      <option value="Short Stories">Short Stories</option>
      <option value="Thriller">Thriller</option>
      <option value="Travel">Travel</option>
    </select>

    <button class="submit-btn" type="submit">Edit Book</button>

    <button class="submit-btn" href="/books/{{this._id}}" type="menu">Go Back</button>

  </form>
</div>